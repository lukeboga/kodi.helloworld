<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.helloworld" version="1.0.0" name="Hello World Program" provider-name="LBM">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>program</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Sample Hello World Program Addon</summary>
        <description lang="en">A very basic Kodi addon to display 'Hello, World!'</description>
        <disclaimer>Use at your own risk!</disclaimer>
        <language>en</language>
        <platform>all</platform>
    </extension>
</addon>

